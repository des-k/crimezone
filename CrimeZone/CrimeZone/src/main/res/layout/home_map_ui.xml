<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:panelHeight="35dp"
        sothree:shadowHeight="4dp"
        sothree:overlay="true"
        android:clickable="true"
        >


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

            <com.ppl.crimezone.activities.SearchLocationUI
                   android:id="@+id/atv_places"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_alignParentTop="true"
                   android:hint="@string/str_atv_places"
                   android:singleLine="true"
                   android:layout_centerHorizontal="true"
                   android:textSize="20dp"
            >

            </com.ppl.crimezone.activities.SearchLocationUI>

            <RelativeLayout
                android:id="@+id/content_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <fragment
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    class="com.google.android.gms.maps.SupportMapFragment" />

                <!-- Transparent View -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent" />
            </RelativeLayout>
        </LinearLayout>
        <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="210dp"
            android:background="@color/white"
            android:layout_gravity="center_horizontal|top">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/blue"
                android:src="@drawable/back"
                android:layout_gravity="center"
                android:id="@+id/show_filter"
            />

            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="by Crime Type"
                android:id="@+id/filtertype" />
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/filter_type"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/color1"
                        android:id="@+id/drugs"
                        android:src="@drawable/ic_drugs" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/color1"
                        android:id="@+id/burglary"
                        android:src="@drawable/ic_burglary" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/color1"
                        android:id="@+id/homicide"
                        android:src="@drawable/ic_homicide" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/color1"
                        android:id="@+id/kidnap"
                        android:src="@drawable/ic_kidnap" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/color1"
                        android:id="@+id/sxassault"
                        android:src="@drawable/ic_sxassault" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/color1"
                        android:id="@+id/theft"
                        android:src="@drawable/ic_theft" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/color1"
                        android:id="@+id/vehicletheft"
                        android:src="@drawable/ic_vehicletheft" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/color1"
                        android:id="@+id/violence"
                        android:src="@drawable/ic_violence" />
                </LinearLayout>
            </HorizontalScrollView>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:background="@color/color4"
                    android:text="Start"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:id="@+id/crime_date_end"/>

                <Button
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="110dp"
                    android:gravity="center"
                    android:background="@color/color4"
                    android:text="End"
                    android:textSize="20dp"
                    android:textColor="#000"

                    android:id="@+id/crime_date_start"/>
           </RelativeLayout>
        </LinearLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>
</RelativeLayout>