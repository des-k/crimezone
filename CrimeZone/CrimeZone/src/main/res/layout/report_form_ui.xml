<RelativeLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1"
    android:focusable="true"
    android:focusableInTouchMode="true">

<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <FrameLayout
        android:layout_width="fill_parent"
        android:id="@+id/map_container"
        android:background="@color/blue"
        android:layout_height="63dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/reportcrime"
            android:id="@+id/h_reportcrime"
            android:layout_gravity="center" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:src="@drawable/back"
            android:id="@+id/back_new_report"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left|center_vertical" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:src="@drawable/write"
            android:layout_marginRight="20dp"
            android:id="@+id/imageButton2"
            android:layout_gravity="right|center_vertical" />
    </FrameLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color1"
            android:src="@drawable/mk"
            android:id="@+id/findaddress" />

        <com.ppl.crimezone.activities.SearchLocationUI
            android:id="@+id/crime_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:hint="@string/str_atv_places"
            android:singleLine="true"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:textColor="@color/color2"
            >
        </com.ppl.crimezone.activities.SearchLocationUI>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/map_frame"
        android:orientation="vertical"
        >
        <fragment
            android:id="@+id/new_report_map"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            class="com.google.android.gms.maps.SupportMapFragment"
            tools:layout="@layout/report_form_ui" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:id="@+id/expandMap" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/scrollView"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Crime Type"
                android:layout_marginTop="10dp"
                android:textColor="@color/dark"
                android:id="@+id/l_crimetype" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/horizontalScrollView" >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/color1"
                        android:id="@+id/drugs"
                        android:src="@drawable/ic_drugs" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/color1"
                        android:id="@+id/burglary"
                        android:src="@drawable/ic_burglary" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/color1"
                        android:id="@+id/homicide"
                        android:src="@drawable/ic_homicide" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/color1"
                        android:id="@+id/kidnap"
                        android:src="@drawable/ic_kidnap" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/color1"
                        android:id="@+id/sxassault"
                        android:src="@drawable/ic_sxassault" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/color1"
                        android:id="@+id/theft"
                        android:src="@drawable/ic_theft" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/color1"
                        android:id="@+id/vehicletheft"
                        android:src="@drawable/ic_vehicletheft" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/color1"
                        android:id="@+id/violence"
                        android:src="@drawable/ic_violence" />

                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Headline"
                android:layout_marginTop="10dp"
                android:textColor="@color/dark"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:inputType="textMultiLine"
                android:textColor="@color/dark"
                android:background="#FFFFFF"
                android:ems="16"
                android:id="@+id/headline"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Description"
                android:layout_marginTop="10dp"
                android:textColor="@color/dark"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:inputType="textMultiLine"
                android:textColor="@color/color3"
                android:ems="10"
                android:background="#FFFFFF"
                android:gravity="left"
                android:id="@+id/description"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Time"
                android:layout_marginTop="10dp"
                android:id="@+id/l_time" />

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@color/dark"
                    android:text="DD/MM/YYYY"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:id="@+id/crime_date"
                    android:layout_gravity="left|center_vertical" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:background="@drawable/time"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical">

                    <Button
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:background="@null"
                        android:text="Start"
                        android:textSize="20dp"
                        android:textColor="@color/white"

                        android:id="@+id/crime_time_start"
                        android:layout_gravity="center" />

                    <Button
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:textColor="@color/white"
                        android:background="@null"
                        android:text="End"
                        android:textSize="20dp"
                        android:id="@+id/crime_time_end"
                        android:layout_gravity="right|center_vertical" />
                </LinearLayout>

            </FrameLayout>

            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/color4"
                android:text="SUBMIT REPORT"
                android:textSize="20dp"
                android:id="@+id/submit" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />
</RelativeLayout>